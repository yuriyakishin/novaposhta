<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Yu_NovaPoshta::css/select2.css"></css>
        <css src="Yu_NovaPoshta::css/styles.css"></css>
    </head>
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="step-config" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="shipping-rates-validation" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="novaposhta-rates-validation" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Yu_NovaPoshta/js/view/shipping-rates-validation</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="config" xsi:type="array">
                                                        <item name="shippingMethodItemTemplate" xsi:type="string">Yu_NovaPoshta/shipping-method-item</item>
                                                    </item>
                                                    <item name="children" xsi:type="array">
                                                        <item name="shipping-address-fieldset" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="city_novaposhta_check" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Yu_NovaPoshta/js/view/city-check</item>
                                                                    <item name="label" xsi:type="string">Доставить Новой Почтой</item>
                                                                    <item name="sortOrder" xsi:type="string">49</item>
                                                                    <item name="dataScope" xsi:type="string">shippingAddress.city_novaposhta_check</item>
                                                                    <item name="multiple" xsi:type="boolean">false</item>
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="template" xsi:type="string">Yu_NovaPoshta/field</item>
                                                                        <item name="customScope" xsi:type="string">shippingAddress</item>
                                                                        <item name="elementTmpl" xsi:type="string">ui/form/components/single/checkbox</item>
                                                                    </item>
                                                                </item>
                                                                <item name="city_novaposhta_ref" xsi:type="array">
                                                                    <item name="component" xsi:type="string">Yu_NovaPoshta/js/view/city</item>
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="template" xsi:type="string">ui/form/field</item>
                                                                        <item name="elementTmpl" xsi:type="string">Yu_NovaPoshta/city</item>
                                                                        <item name="customScope" xsi:type="string">shippingAddress</item>
                                                                        <item name="imports" xsi:type="array">
                                                                            <item name="setOptions" xsi:type="string">index = checkoutProvider:dictionaries.city</item>
                                                                        </item>
                                                                        <item name="city_fast" xsi:type="array"></item>
                                                                        <item name="visible" xsi:type="boolean">false</item>
                                                                    </item>
                                                                    <item name="dataScope" xsi:type="string">shippingAddress.city_novaposhta_ref</item>
                                                                    <item name="provider" xsi:type="string">checkoutProvider</item>
                                                                    <item name="sortOrder" xsi:type="string">50</item>
                                                                    <item name="label" xsi:type="string">City</item>
                                                                    <item name="validation" xsi:type="array">
                                                                        <item name="required-entry" xsi:type="boolean">true</item>
                                                                    </item>
                                                                </item>
                                                                <item name="city" xsi:type="array">
                                                                    <item name="sortOrder" xsi:type="string">51</item>
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="visible" xsi:type="boolean">true</item>
                                                                    </item>
                                                                </item>
                                                                <item name="country_id" xsi:type="array">
                                                                    <item name="config" xsi:type="array">
                                                                        <item name="visible" xsi:type="boolean">false</item>
                                                                    </item>
                                                                </item>
                                                                <item name="postcode" xsi:type="array">
                                                                    <item name="visible" xsi:type="boolean">false</item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                        <!-- warehouse -->
                                                        <item name="novaposhta-form-storage-warehouse" xsi:type="array">
                                                            <item name="component" xsi:type="string">Yu_NovaPoshta/js/view/warehouse</item>
                                                            <item name="displayArea" xsi:type="string">novaposhta-checkout-form-fields-warehouse</item>
                                                            <item name="sortOrder" xsi:type="string">0</item>
                                                            <item name="dataScope" xsi:type="string">shippingAddress.warehouse_novaposhta_id</item>
                                                            <item name="provider" xsi:type="string">checkoutProvider</item>
                                                            <item name="label" xsi:type="string"></item>
                                                            <item name="config" xsi:type="array">
                                                                <item name="template" xsi:type="string">Yu_NovaPoshta/warehouse</item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
